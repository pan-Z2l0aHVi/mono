{
  "auto_install_extensions": {
    "cspell": true,
    "html": true,
    "mdx": true,
    "stylelint": true,
    "vue": true
  },
  "file_types": {
    "JSON": ["eslintrc", "prettierrc", "stylelintrc"],
    "JSONC": ["tsconfig.json", "tsconfig.*.json", "cspell.json"]
  },
  "format_on_save": "on",
  "languages": {
    "JSON": {
      "code_actions_on_format": { "source.fixAll.eslint": true },
      "language_servers": ["eslint", "json-language-server"]
    },
    "JSONC": {
      "code_actions_on_format": { "source.fixAll.eslint": true },
      "language_servers": ["eslint", "json-language-server"]
    },
    "JavaScript": { "code_actions_on_format": { "source.fixAll.eslint": true } },
    "Markdown": {
      "code_actions_on_format": { "source.fixAll.eslint": true },
      "language_servers": ["eslint"]
    },
    "TSX": { "code_actions_on_format": { "source.fixAll.eslint": true } },
    "TypeScript": { "code_actions_on_format": { "source.fixAll.eslint": true } },
    "Vue.js": { "code_actions_on_format": { "source.fixAll.eslint": true } }
  },
  "lsp": {
    "eslint": {
      "settings": {
        // 自动检测 Monorepo 中的子目录，确保能找到各层级的配置文件
        "workingDirectories": [
          {
            "mode": "auto"
          }
        ]
      }
    }
  }
}
